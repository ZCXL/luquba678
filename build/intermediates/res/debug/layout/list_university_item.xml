<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp" >

    <com.zhuchao.view_rewrite.RoundImageView
        android:id="@+id/university_logo"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:scaleType="matrix"
        android:src="@drawable/bg_jy" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/university_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:minWidth="80dp"
            android:textSize="18sp"
            android:text="北京大学北京大学北京大学北京大学北京大学"
            android:gravity="left"
            android:textColor="@color/main_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/grid_university_count"
                style="@style/text_frame_radius_style"
                android:background="@drawable/frame_radius5_alfa0_orange"
                android:gravity="center"
                android:text="排名1" />

            <TextView
                android:id="@+id/is_211"
                android:layout_marginLeft="5dp"
                style="@style/text_frame_radius_style"
                android:background="@drawable/frame_radius5_alfa0_main_color"
                android:text="211" />
            <TextView
                android:id="@+id/is_985"
                style="@style/text_frame_radius_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/frame_radius5_alfa0_main_color"
                android:text="985" />
        </LinearLayout>

        <TextView
            android:id="@+id/university_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:text="地区：北京"
            android:textColor="#B4B2B3" />
    </LinearLayout>

</LinearLayout><!-- From: file:/home/zhuchao/AndroidStudioProjects/luquba678/res/layout/list_university_item.xml -->