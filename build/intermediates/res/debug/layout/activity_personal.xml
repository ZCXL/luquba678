<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/editer_top2"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        layout="@layout/top_back_title_more" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:orientation="horizontal" >

        <com.zhuchao.view_rewrite.RoundImageView
            android:id="@+id/head_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/head_img" />

        <LinearLayout
            android:id="@+id/detail_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="昵称"
                android:textColor="@color/text_black_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="签名：暂无"
                android:textColor="@color/gray_6"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView style="@style/image_button_forword" />
    </LinearLayout>

    <View style="@style/under_line" />

    <LinearLayout
        android:id="@+id/person_account_line"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/personal_count" />

        <TextView
            style="@style/personal_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.0"
            android:gravity="left|center_vertical"
            android:text="我的账号" />

        <ImageView style="@style/image_button_forword" />
    </LinearLayout>

    <View style="@style/under_line" />

    <LinearLayout
        android:id="@+id/person_collection"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/personal_conlect" />

        <TextView
            style="@style/personal_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.0"
            android:gravity="left|center_vertical"
            android:text="我的收藏" />

        <ImageView style="@style/image_button_forword" />
    </LinearLayout>

    <View style="@style/under_line" />

    <LinearLayout
        android:id="@+id/person_setting"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/personal_seting" />

        <TextView
            style="@style/personal_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.0"
            android:gravity="left|center_vertical"
            android:text="我的设置" />

        <ImageView style="@style/image_button_forword" />
    </LinearLayout>

    <View style="@style/under_line" />

    <LinearLayout
        android:id="@+id/person_quit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/personal_quit" />

        <TextView
            style="@style/personal_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.0"
            android:gravity="left|center_vertical"
            android:text="退出登录" />

        <ImageView style="@style/image_button_forword" />
    </LinearLayout>

    <View style="@style/under_line" />

</LinearLayout><!-- From: file:/home/zhuchao/AndroidStudioProjects/luquba678/res/layout/activity_personal.xml -->