<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 底部选项卡样式 -->
    <style name="bottombar_radioGroup" parent="layout_vertical">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_height">10dp</item>
    </style>
    <!-- 顶部选项卡样式 -->
    <style name="top_radioGroup" parent="layout_vertical">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">20dp</item>
    </style>
    <!-- 选项卡标签样式 -->
    <style name="bottombar_radioButton" parent="layout_horizontal">
        <item name="android:button">@null</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textColor">#989898</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="bottombar_radioButton_top" parent="layout_horizontal">
        <item name="android:button">@null</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textColor">#989898</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

</resources>