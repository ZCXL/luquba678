<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/time_line"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56.33dp">
        <View
            android:id="@+id/view_1"
            android:layout_width="3dp"
            android:layout_height="137.33dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/new_line_wish" />
        <ImageView
            android:id="@+id/image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/view_1"
            android:src="@drawable/new_ball" />
        <View
            android:id="@+id/view_2"
            android:layout_width="3dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/image"
            android:layout_marginTop="-1dp"
            android:background="@drawable/new_line_wish" />
    </RelativeLayout>
    <TextView
        android:id="@+id/show_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="An hour ago"
        android:textColor="#ff494949"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_alignRight="@+id/time_line"
        android:layout_marginRight="17dp"
        android:layout_marginTop="137.33dp"/>
    <FrameLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="300.66dp"
        android:layout_marginTop="13.33dp"
        android:layout_marginLeft="9.33dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="105dp"
        android:layout_toRightOf="@+id/time_line">

        <ImageView
            android:id="@+id/image_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/wish_9"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"/>

        <RelativeLayout
            android:id="@+id/wish_time_layout"
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:background="#7a13b199">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="7"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:text="2015-08-18"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>