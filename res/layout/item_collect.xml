<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants"
     >
    <CheckBox
        android:id="@+id/collect_check"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/collect_select"
        android:button="@null" />

    <ImageView
        android:id="@+id/collect_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@id/collect_check" />

    <TextView
        android:id="@+id/collect_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/collection"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_black_color"
        android:layout_alignTop="@+id/collect_img"
        android:layout_toRightOf="@+id/collect_img"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/collect_img"
        android:layout_alignBottom="@+id/collect_img"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/collect_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标签"
            android:textColor="@color/gray_6"
            android:textSize="16sp"
            android:layout_weight="1.0"/>
        <TextView
            android:id="@+id/collect_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1天前"
            android:gravity="right"
            android:textColor="@color/gray_7"
            android:layout_weight="1.0"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/item_right"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="#ffe6282e">
        <TextView
            android:id="@+id/item_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="15sp"
            android:text="删除"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>