<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        layout="@layout/top_back_title_more" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/head_img" />

        <LinearLayout
            android:id="@+id/detail_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="昵称"
                android:textColor="@color/text_black_color"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="简介"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView style="@style/image_button_forword" />
    </LinearLayout>

    <View style="@style/under_line" />

    <LinearLayout
        android:id="@+id/person_account_line"
         android:layout_width="fill_parent"
            android:layout_height="60dp" 
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/personal_count" />

        <TextView
            style="@style/personal_text_view"
            android:text="@string/my_username" />

        <ImageView style="@style/image_button_forword" />
    </LinearLayout>

    <View style="@style/under_line" />

    <LinearLayout
        android:id="@+id/person_collection"
          android:layout_width="fill_parent"
            android:layout_height="60dp" 
            android:orientation="horizontal"
            android:gravity="center_vertical" >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/personal_conlect" />

        <TextView
            style="@style/personal_text_view"
            android:text="@string/my_collection" />

        <ImageView style="@style/image_button_forword" />
    </LinearLayout>

    <View style="@style/under_line" />

    <LinearLayout
        android:id="@+id/person_setting"
          android:layout_width="fill_parent"
            android:layout_height="60dp" 
            android:orientation="horizontal"
            android:gravity="center_vertical" >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/personal_seting" />

        <TextView
            style="@style/personal_text_view"
            android:text="@string/set_up" />

        <ImageView style="@style/image_button_forword" />
    </LinearLayout>

    <View style="@style/under_line" />

    <LinearLayout
        android:id="@+id/person_quit"
          android:layout_width="fill_parent"
            android:layout_height="60dp" 
            android:orientation="horizontal"
            android:gravity="center_vertical" >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@drawable/personal_quit" />

        <TextView
            style="@style/personal_text_view"
            android:text="@string/exist_login" />

        <ImageView style="@style/image_button_forword" />
    </LinearLayout>

    <View style="@style/under_line" />

</LinearLayout>