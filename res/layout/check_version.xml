<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="40dp" >
    <LinearLayout
        android:id="@+id/sub"
        android:orientation="vertical"
        android:layout_width="250dp"
        android:background="@drawable/new_sex_select_bg"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="20.33dp"
            android:text="目前有新版本,是否升级?"
            android:textColor="#484848"
            android:textSize="13dp"/>
        <TextView
            android:id="@+id/version_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18.33dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:text="版本号:V1.0.0"
            android:textColor="#484848"
            android:textSize="11dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18.33dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:text="新版本功能介绍:"
            android:textColor="#484848"
            android:textSize="9dp"/>
        <TextView
            android:id="@+id/version_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18.33dp"
            android:layout_marginLeft="31.66dp"
            android:layout_marginRight="19dp"
            android:text="1.功能.\n2.新版本."
            android:textColor="#757575"
            android:textSize="9.33dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="#d4d4d5"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="13.66dp">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:background="@drawable/new_select_birthday_cancel"
                android:gravity="center"
                android:textColor="#807e7c"
                android:text="以后提醒" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="6dp"
                android:background="@drawable/new_select_birthday_confirm"
                android:text="现在更新"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>