<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#787777"
            android:text="高考年份" />
    </RelativeLayout>

    <kankan.wheel.widget.WheelView
        android:id="@+id/id_year"
        android:layout_width="match_parent"
        android:layout_height="80dp">
    </kankan.wheel.widget.WheelView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="13.66dp">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:background="@drawable/new_select_birthday_cancel"
            android:gravity="center"
            android:textColor="#807e7c"
            android:text="取消" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="6dp"
            android:background="@drawable/new_select_birthday_confirm"
            android:text="确定"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</LinearLayout>