<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="40dp" >
    <LinearLayout
        android:id="@+id/sub"
        android:orientation="vertical"
        android:layout_width="250dp"
        android:background="#f0f0f3"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="20dp"
            android:text="确定清空本地缓存?"
            android:textColor="#484848"
            android:textSize="14dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="14dp">
            <TextView
                android:id="@+id/text_cache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本地缓存:"
                android:textColor="#484946"
                android:textSize="10.66dp"/>
            <TextView
                android:id="@+id/number_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22M"
                android:layout_toRightOf="@+id/text_cache"
                android:layout_marginLeft="2dp"
                android:textColor="@color/main_color"
                android:textSize="10.66dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:background="#d4d4d5"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="13.66dp">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:background="@drawable/new_select_birthday_cancel"
                android:gravity="center"
                android:textColor="#807e7c"
                android:text="取消" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="6dp"
                android:background="@drawable/new_select_birthday_confirm"
                android:text="确定"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>