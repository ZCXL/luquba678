<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@color/main_color"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <!-- style="@style/style_top_base" -->

    <LinearLayout
        android:id="@+id/top_back"
        android:layout_width="wrap_content"
        android:minWidth="50dp"
        android:layout_height="fill_parent"
        android:background="@null"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal" 
        >

        <ImageView
            android:id="@+id/title_top_image"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:focusable="false"
                android:clickable="false"
                android:enabled="false"
            android:layout_height="20dp"
            android:src="@drawable/back_array" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/top_back"
        android:background="@drawable/frame_radius8_alfa0_white" >

        <ImageView
            android:id="@+id/fangdajing"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_city_query" />

        <EditText
            android:id="@+id/top_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/fangdajing"
            android:background="@null"
            android:hint="考生所在地"
            android:textColor="#292727"
            android:textColorHint="#CDCDCD"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>