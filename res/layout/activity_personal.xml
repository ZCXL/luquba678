<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/main_color"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:gravity="center"
            android:text="个人"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="20.66dp"
        android:background="#fff4f4f4"/>
    <RelativeLayout
        android:id="@+id/detail_line"
        android:layout_width="match_parent"
        android:layout_height="82.33dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal" >

        <com.zhuchao.view_rewrite.RoundCornerImage
            android:id="@+id/head_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13.33dp"
            android:scaleType="fitXY"
            android:src="@drawable/new_head_default"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="昵称"
            android:layout_toRightOf="@+id/head_img"
            android:layout_marginLeft="19.33dp"
            android:layout_centerVertical="true"
            android:textColor="@color/text_black_color"
            android:textSize="16dp" />
        <ImageView style="@style/image_button_forward" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="20.66dp"
        android:background="#fff4f4f4"/>

    <RelativeLayout
        android:id="@+id/person_account_line"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/person_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13.33dp"
            android:src="@drawable/new_person" />

        <TextView
            style="@style/personal_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38.66dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/person_button"
            android:textSize="16dp"
            android:text="我的账号" />

        <ImageView style="@style/image_button_forward" />
    </RelativeLayout>

    <View style="@style/under_line" />

    <RelativeLayout
        android:id="@+id/person_collection"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/collect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13.33dp"
            android:src="@drawable/new_collection" />

        <TextView
            style="@style/personal_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38.66dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/collect_button"
            android:textSize="16dp"
            android:text="我的收藏" />

        <ImageView style="@style/image_button_forward" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="20.66dp"
        android:background="#fff4f4f4"/>

    <RelativeLayout
        android:id="@+id/person_setting"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/setting_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13.33dp"
            android:src="@drawable/new_setting" />

        <TextView
            style="@style/personal_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38.66dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/setting_button"
            android:textSize="16dp"
            android:text="我的设置" />

        <ImageView style="@style/image_button_forward" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="20.66dp"
        android:background="#fff4f4f4"/>

    <RelativeLayout
        android:id="@+id/person_quit"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/quit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13.33dp"
            android:src="@drawable/new_quit" />

        <TextView
            style="@style/personal_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38.66dp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/quit_button"
            android:textSize="16dp"
            android:text="退出登录" />

        <ImageView style="@style/image_button_forward" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#fff4f4f4"/>
</LinearLayout>