<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/person_detail_title"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        layout="@layout/top_back_title_more" />

    <RelativeLayout
        android:id="@+id/rl_head_img"
        android:layout_width="match_parent"
        android:layout_height="70dp" >

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical|left"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="头像"
            android:textColor="@color/text_black_color"
            android:textSize="18sp" />

        <com.zhuchao.view_rewrite.RoundImageView
            android:id="@+id/head_img"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/head_img" />
    </RelativeLayout>

    <View style="@style/under_line" />

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical|left"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="昵称"
            android:textColor="@color/text_black_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="名字"
            android:textColor="@color/gray_6"
            android:textSize="17sp" />
    </RelativeLayout>

    <View style="@style/under_line" />

    <RelativeLayout
        android:id="@+id/rl_sex"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical|left"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="性别"
            android:textColor="@color/text_black_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="男"
            android:textColor="@color/gray_6"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/gray_d" />

    <RelativeLayout
        android:id="@+id/rl_date"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical|left"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="出生日期"
            android:textColor="@color/text_black_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="2015-09-12"
            android:textColor="@color/gray_6"
            android:textSize="17sp" />
    </RelativeLayout>

    <View style="@style/under_line" />

    <RelativeLayout
        android:id="@+id/rl_province"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="所在地"
            android:textColor="@color/text_black_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="湖北"
            android:textColor="@color/gray_6"
            android:textSize="17sp" />
    </RelativeLayout>

    <View style="@style/under_line" />

    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical|left"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="个性签名"
            android:textColor="@color/text_black_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="******"
            android:textColor="@color/gray_6"
            android:textSize="17sp" />
    </RelativeLayout>

    <View style="@style/under_line" />

    <RelativeLayout
        android:id="@+id/rl_score"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical|left"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="高考分数"
            android:textColor="@color/text_black_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="490"
            android:textColor="@color/gray_6"
            android:textSize="17sp" />
    </RelativeLayout>

    <View style="@style/under_line" />

    <RelativeLayout
        android:id="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical|left"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="高考类别"
            android:textColor="@color/text_black_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="理科"
            android:textColor="@color/gray_6"
            android:textSize="17sp" />
    </RelativeLayout>

    <View style="@style/under_line" />

    <RelativeLayout
        android:id="@+id/rl_year"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center_vertical|left"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="高考年份"
            android:textColor="@color/text_black_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="2015"
            android:textColor="@color/gray_6"
            android:textSize="17sp" />
    </RelativeLayout>

    <View style="@style/under_line" />

</LinearLayout>