<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/main_color"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <!-- style="@style/style_top_base" -->

        <LinearLayout
            android:id="@+id/top_back"
            android:layout_width="wrap_content"
            android:minWidth="50dp"
            android:layout_height="fill_parent"
            android:background="@null"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/title_top_image"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/new_wish_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:gravity="center"
            android:text="个人信息"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animationCache="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_head_img"
        android:layout_width="match_parent"
        android:layout_height="82.33dp" >

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:textColor="@color/text_black_color"
            android:textSize="13.66sp"
            android:text="头像"
            />
        <ImageView
            android:id="@+id/head_arrow"
            style="@style/image_button_forward"
            android:layout_marginRight="27.33dp"/>
        <com.zhuchao.view_rewrite.RoundCornerImage
            android:id="@+id/head_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/head_arrow"
            android:scaleType="fitXY"
            android:layout_marginRight="14dp"
            android:src="@drawable/new_head_default" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="20.66dp"
        android:background="#fff4f4f4"/>

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:textColor="@color/text_black_color"
            android:textSize="13.66sp"
            android:text="昵称" />
        <ImageView
            android:id="@+id/nickname_arrow"
            style="@style/image_button_forward"
            android:layout_marginRight="27.33dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_6"
            android:textSize="13.66sp"
            android:layout_toLeftOf="@+id/nickname_arrow"
            android:layout_marginRight="17dp"
            android:text="名字"/>
    </RelativeLayout>

    <View style="@style/under_line" />

    <RelativeLayout
        android:id="@+id/rl_sex"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:textColor="@color/text_black_color"
            android:textSize="13.66sp"
            android:text="性别" />

        <ImageView
            android:id="@+id/sex_arrow"
            style="@style/image_button_forward"
            android:layout_marginRight="27.33dp"/>
        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_6"
            android:textSize="13.66sp"
            android:layout_toLeftOf="@+id/sex_arrow"
            android:layout_marginRight="17dp"
            android:text="男"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@color/gray_d" />

    <RelativeLayout
        android:id="@+id/rl_date"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:textColor="@color/text_black_color"
            android:textSize="13.66sp"
            android:text="出生日期"
            />

        <ImageView
            android:id="@+id/birthday_arrow"
            style="@style/image_button_forward"
            android:layout_marginRight="27.33dp"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_6"
            android:textSize="13.66sp"
            android:layout_toLeftOf="@+id/birthday_arrow"
            android:layout_marginRight="17dp"
            android:text="2015-09-12" />
    </RelativeLayout>

    <View style="@style/under_line" />

    <RelativeLayout
        android:id="@+id/rl_province"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:textColor="@color/text_black_color"
            android:textSize="13.66sp"
            android:text="所在地" />
        <ImageView
            android:id="@+id/address_arrow"
            style="@style/image_button_forward"
            android:layout_marginRight="27.33dp"/>
        <TextView
            android:id="@+id/province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_6"
            android:textSize="13.66sp"
            android:layout_toLeftOf="@+id/address_arrow"
            android:layout_marginRight="17dp"
            android:text="湖北" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="20.66dp"
        android:background="#fff4f4f4"/>

    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:textColor="@color/text_black_color"
            android:textSize="13.66sp"
            android:text="个性签名"
            />
        <ImageView
            android:id="@+id/signature_arrow"
            style="@style/image_button_forward"
            android:layout_marginRight="27.33dp"/>
        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_6"
            android:textSize="13.66sp"
            android:layout_toLeftOf="@+id/signature_arrow"
            android:layout_marginRight="17dp"
            android:text="******" />
    </RelativeLayout>

    <View style="@style/under_line" />

    <RelativeLayout
        android:id="@+id/rl_score"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:textColor="@color/text_black_color"
            android:textSize="13.66sp"
            android:text="高考分数" />
        <ImageView
            android:id="@+id/grade_arrow"
            style="@style/image_button_forward"
            android:layout_marginRight="27.33dp"/>
        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_6"
            android:textSize="13.66sp"
            android:layout_toLeftOf="@+id/grade_arrow"
            android:layout_marginRight="17dp"
            android:text="630"
            />
    </RelativeLayout>

    <View style="@style/under_line" />

    <RelativeLayout
        android:id="@+id/rl_type"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:textColor="@color/text_black_color"
            android:textSize="13.66sp"
            android:text="高考类别" />
        <ImageView
            android:id="@+id/type_arrow"
            style="@style/image_button_forward"
            android:layout_marginRight="27.33dp"/>
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_6"
            android:textSize="13.66sp"
            android:layout_toLeftOf="@+id/type_arrow"
            android:layout_marginRight="17dp"
            android:text="理科" />
    </RelativeLayout>

    <View style="@style/under_line" />

    <RelativeLayout
        android:id="@+id/rl_year"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:textColor="@color/text_black_color"
            android:textSize="13.66sp"
            android:text="高考年份" />
        <ImageView
            android:id="@+id/year_arrow"
            style="@style/image_button_forward"
            android:layout_marginRight="27.33dp"/>
        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_6"
            android:textSize="13.66sp"
            android:layout_toLeftOf="@+id/year_arrow"
            android:layout_marginRight="17dp"
            android:text="2015" />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="20.66dp"
        android:background="#fff4f4f4"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>