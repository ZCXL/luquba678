<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent">
<LinearLayout
    android:layout_width="225.33dp"
    android:layout_height="wrap_content"
    android:background="@drawable/new_sex_select_bg"
    android:orientation="vertical"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="13.33dp"
            android:textColor="#787777"
            android:text="选择性别" />
    </RelativeLayout>

    <View style="@style/under_line" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="103dp">
        <Button
            android:id="@+id/female"
            android:layout_width="65dp"
            android:layout_height="25.33dp"
            android:text="男"
            android:background="@drawable/new_sex_checked"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="30.66dp"/>
        <Button
            android:id="@+id/male"
            android:layout_width="65dp"
            android:layout_height="25.33dp"
            android:text="女"
            android:background="@drawable/new_sex_unchecked"
            android:layout_toRightOf="@+id/female"
            android:layout_marginLeft="28.66dp"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="30.66dp"/>
    </RelativeLayout>
    <View style="@style/under_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:id="@+id/rl_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="取消"
            android:textColor="@color/black"
            android:layout_marginTop="12.66dp"
            android:background="@drawable/new_sex_select_button"/>
    </RelativeLayout>

</LinearLayout>
    </RelativeLayout>