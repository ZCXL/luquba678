<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="40dp" >
    <RelativeLayout
        android:id="@+id/sub"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#f0f0f3" >

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15.33dp"
            android:textSize="15dp"
            android:text="提示"
            android:textColor="@color/main_color" />
        <TextView
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="确定删除吗？"
            android:layout_below="@+id/text"
            android:layout_marginTop="17.66dp"
            android:textSize="13.33dp"
            android:textColor="@color/black" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:background="#888888"
            android:layout_marginRight="19dp"
            android:layout_marginLeft="19dp"
            android:layout_below="@+id/notification"
            android:layout_marginTop="15.66dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12.33dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="13.66dp"
            android:layout_below="@+id/divider">
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:background="@drawable/new_select_birthday_cancel"
                android:gravity="center"
                android:textColor="#807e7c"
                android:text="取消" />
            <Button
                android:id="@+id/btn_ok"
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="6dp"
                android:background="@drawable/new_select_birthday_confirm"
                android:text="确定"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>